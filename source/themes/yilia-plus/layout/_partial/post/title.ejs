<% if (post.link){ %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 itemprop="name">
	<% if (theme.open_in_new.article){ %>
	  <a class="<%= class_name %>" href="<%- url_for(post.path) %>" target="_blank">
      <%= post.title %>
      <% if(post.top ){%>
        <text style="font-size:.5em;vertical-align:text-bottom;padding:.4em .5em .5em;font-weight:bold;color:#fff;background-color:#ff6701;">顶</text>
      <% } %>
    </a>
  <% } else { %>
	  <a class="<%= class_name %>" href="<%- url_for(post.path) %>">
      <%= post.title %>
      <% if(post.top ){%>
        <text style="font-size:.5em;vertical-align:text-bottom;padding:.4em .5em .5em;font-weight:bold;color:#fff;background-color:#ff6701;">顶</text>
      <% } %>
    </a>
	<% } %>
    </h1>
  <% } else { %>
    <h1 class="<%= class_name %>" itemprop="name">
      <%= post.title %>
      <% if(post.top ){%>
        <text style="font-size:.5em;vertical-align:text-bottom;padding:.4em .5em .5em;font-weight:bold;color:#fff;background-color:#ff6701;">顶</text>
      <% } %>
    </h1>
  <% } %>
<% } %>
